{
    "name": "YouTube Moderator Watcher",
    "version": "0.2.0",
    "manifest_version": 2,
    "description": "YouTube Live のチャットで、モデレータとオーナーの発言を一定時間画面上に固定します。",
    "icons": {
        "16": "images/size16.png",
        "48": "images/size48.png",
        "128": "images/size128.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "content_scripts": [
        {
            "run_at": "document_idle",
            "all_frames": true,
            "matches": [
                "https://*.youtube.com/live_chat**"
            ],
            "js": [
                "storage.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "image/*"
    ],
    "browser_action": {
        "default_popup": "options.html"
    }
}